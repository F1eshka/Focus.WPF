<Window x:Class="Focus.HW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Focus.HW"
        mc:Ignorable="d"
        Title="FocusPokusTruLaLa" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="120*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>

        <Menu VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="20,22,48,0" Background="AliceBlue">
            <MenuItem Header="Comands">
                <MenuItem Header="set red colors" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>

        <StackPanel Margin="20,20,20,-30" Grid.ColumnSpan="2" Grid.Row="1">
            <TextBox Height="30"/>
            <CheckBox Content="Check Me" Height="30" Margin="0,20,0,10"/>
            <RadioButton Content="Option 1" Height="30" Margin="0,0,0,10"/>
            <Button Content="Red" Height="30" Click="Button_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
